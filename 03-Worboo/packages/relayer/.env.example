# Environment variables override config/relayer.config.json (if present)
RELAYER_RPC_URL=https://rpc.api.moonbase.moonbeam.network
RELAYER_PRIVATE_KEY=0xabc123...
RELAYER_REGISTRY_ADDRESS=0xRegistryAddress
RELAYER_TOKEN_ADDRESS=0xTokenAddress
# Optional: default reward is 10 WBOO (18 decimals)
RELAYER_REWARD_PER_WIN=10
# Optional: retry settings (defaults 3 retries, 1000ms base backoff)
RELAYER_MAX_RETRIES=3
RELAYER_BACKOFF_MS=1000
# Optional: custom cache location for processed events
RELAYER_CACHE_PATH=.cache/processed-events.jsonl
# Optional: maximum processed events retained (oldest dropped when exceeded)
RELAYER_CACHE_MAX_ENTRIES=1000
# Optional: health snapshot path for status command
RELAYER_HEALTH_PATH=.cache/health.json
# Optional: health server host/port (exposed at http://host:port/healthz)
RELAYER_HEALTH_HOST=0.0.0.0
RELAYER_HEALTH_PORT=8787
# Optional: override CORS origin for /healthz (set to "disable" to omit header)
RELAYER_HEALTH_CORS_ORIGIN=*
# Optional: structured log file (JSONL) with rotation settings
RELAYER_LOG_FILE=.logs/worboo-relayer.log
RELAYER_LOG_MAX_BYTES=5242880
RELAYER_LOG_BACKUPS=5


